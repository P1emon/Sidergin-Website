      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Chuyển đổi ảnh chính khi click vào thumbnail
        function changeImage(src) {
            document.getElementById('main-product-image').src = src;
        }

        // Tăng giảm số lượng
        function increaseQuantity() {
            let quantity = document.getElementById('quantity');
            quantity.value = parseInt(quantity.value) + 1;
        }

        function decreaseQuantity() {
            let quantity = document.getElementById('quantity');
            if (parseInt(quantity.value) > 1) {
                quantity.value = parseInt(quantity.value) - 1;
            }
        }

        // Chuyển hướng đến trang thanh toán với số lượng
        function goToRetailPage() {
            const quantity = document.getElementById('quantity').value;
            window.location.href = 'Order/Retail?quantity=' + quantity;
        }

        // Chuyển đổi tab
        function openTab(tabName) {
            let tabs = document.getElementsByClassName('tab-content');
            for (let i = 0; i < tabs.length; i++) {
                tabs[i].classList.remove('active');
            }
            let buttons = document.getElementsByClassName('tab-btn');
            for (let i = 0; i < buttons.length; i++) {
                buttons[i].classList.remove('active');
            }
            document.getElementById(tabName).classList.add('active');
            event.currentTarget.classList.add('active');
        }

        // Zoom ảnh
        const mainImage = document.getElementById('main-product-image');
        const zoomModal = document.getElementById('zoom-modal');
        const zoomedImage = document.getElementById('zoomed-image');
        const closeZoom = document.querySelector('.close-zoom');

        mainImage.addEventListener('click', () => {
            zoomedImage.src = mainImage.src;
            zoomModal.style.display = 'flex';
        });

        closeZoom.addEventListener('click', () => {
            zoomModal.style.display = 'none';
        });

        zoomModal.addEventListener('click', (e) => {
            if (e.target === zoomModal) {
                zoomModal.style.display = 'none';
            }
        });
    
// Fix for the auth-link click event
document.addEventListener('DOMContentLoaded', function() {
    // Get the auth link element
    const authLink = document.querySelector('#auth-link a');
    
    if (authLink) {
        // Remove any existing onclick attribute to avoid conflicts
        authLink.removeAttribute('onclick');
        
        // Add event listener for the auth link
        authLink.addEventListener('click', function(e) {
            e.preventDefault();
            // Redirect to the Authentication view
            window.location.href = '/Account/Index';
        });
    }
    
    // Handle dropdown toggle for authenticated users if needed
    const dropdownToggle = document.querySelector('.dropdown-toggle');
    if (dropdownToggle) {
        dropdownToggle.addEventListener('click', function(e) {
            e.preventDefault();
            // Bootstrap 5 dropdown toggle
            const dropdown = new bootstrap.Dropdown(this);
            dropdown.toggle();
        });
        
        // Close dropdown when clicking outside
        document.addEventListener('click', function(e) {
            if (!e.target.closest('.dropdown')) {
                const dropdownInstance = bootstrap.Dropdown.getInstance(dropdownToggle);
                if (dropdownInstance) {
                    dropdownInstance.hide();
                }
            }
        });
    }
});

