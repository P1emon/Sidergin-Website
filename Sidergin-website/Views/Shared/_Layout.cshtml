<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web_Sindergin.styles.css" asp-append-version="true" />
</head>

<body>
        <header>
        <div class="logo">
            <h1><span class="highlight">S</span>IDERGIN</h1>
        </div>
        <nav>
            <ul>
                <li><a href="~/Home/Index">Giới thiệu</a></li>
                <li><a href="~/Home/News">Tin tức</a></li>
                <li><a href="~/Home/Help">Trợ giúp</a></li>
                <li><a href="~/Home/Contact">Liên hệ</a></li>
                <li id="auth-link">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="dropdown">
                            <a href="#" class="dropdown-toggle" data-bs-toggle="dropdown">
                                Xin chào, @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">Thông tin cá nhân</a></li>
                           
                                <a>
                              
                                    <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item">Đăng xuất</button>
                                    </form>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <a href="javascript:void(0);" onclick="openAuthModal()">Đăng nhập/Đăng ký</a>

                    }

                </li>


            </ul>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
   

    <footer class="border-top footer text-muted">
        <div class="footer-content">
            <div class="company-info">
                <h3>Nhà phân phối Thuốc Việt số 1</h3>
                <p>Địa chỉ: 123 Đường Số 1, Quận 1, TP. Hồ Chí Minh</p>
                <p>Mã số: .................................</p>
                <p>Điện thoại: 0123456789</p>
                <p>Zalo: 0123456789</p>
                <p>Email: <a href="mailto:admin123@gmail.com">admin123@gmail.com</a></p>
            </div>
            <div class="footer-links">
                <h3>Chính sách hỗ trợ</h3>
                <ul>
                    <li><a href="#">Chính sách mua hàng</a></li>
                    <li><a href="#">Phương thức thanh toán</a></li>
                    <li><a href="#">Chính sách vận chuyển</a></li>
                    <li><a href="#">Chính sách đổi trả hàng</a></li>
                    <li><a href="#">Bảo mật thông tin khách hàng</a></li>
                    <li><a href="#">Chính sách bảo vệ dữ liệu chung</a></li>
                    <li><a href="#">Điều khoản dịch vụ</a></li>
                </ul>
            </div>
        </div>
        <div class="container">
            &copy; 2025 - Web_Sindergin - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
   

        // Hàm xử lý sự kiện khi nhấp vào liên kết "Đăng nhập/Đăng ký"
        document.getElementById('auth-link').addEventListener('click', async function (e) {
            e.preventDefault();

          
            // Hàm xử lý sự kiện khi nhấp vào liên kết "Đăng nhập/Đăng ký"
            document.getElementById('auth-link').addEventListener('click', async function (e) {
                e.preventDefault();

                // Kiểm tra trạng thái đăng nhập
                const isAuthenticated = await checkLoginStatus();

                if (isAuthenticated) {
                    // Nếu đã đăng nhập, hiển thị dropdown
                    const dropdownToggle = document.querySelector('.dropdown-toggle');
                    if (dropdownToggle) {
                        dropdownToggle.click(); // Kích hoạt dropdown
                    }
                } else {
                    // Nếu chưa đăng nhập, hiển thị form đăng nhập
                    openAuthModal('login');
                }
            });

        
           
            // Xử lý dropdown khi click
            document.querySelector('.dropdown-toggle').addEventListener('click', function (e) {
                e.preventDefault();
                const dropdown = new bootstrap.Dropdown(this);
                dropdown.toggle();
            });

            // Tự động đóng dropdown khi click ra ngoài
            document.addEventListener('click', function (e) {
                if (!e.target.closest('.dropdown')) {
                    bootstrap.Dropdown.getInstance(document.querySelector('.dropdown-toggle'))?.hide();
                }
            });


    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
